<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Created on </strong>
    <%= post.created_at.to_formatted_s(:nice) %>
  </p>

  <p>
    <strong>Last update: </strong>
    <%= post.updated_at.to_formatted_s(:nice) %>
  </p>

</div>
